#!/usr/bin/env bash
# Configure my nginx to redirect

sudo apt-get -y update
sudo apt-get -y install nginx
echo "Hello World" > /var/www/html/index.html
r_director="rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"
sudo sed -i "$r_director" /etc/nginx/sites-enabled/default

sudo service nginx restart
